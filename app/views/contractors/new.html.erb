<% provide(:title, "Sign up") %>
<h1>Let's pick up some side work</h1>
<div class="row justify-content-center">
  <div class="col-lg-7">
    <%= form_for(@contractor) do |f| %>
      <%= render 'shared/error_messages', object: @contractor %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        
        <div class="form-group col-md-6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <%= f.fields_for :user do |user_form|%>
        <div class='form-group'>
          <%= user_form.label :email %>
          <%= user_form.email_field :email, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= user_form.label :password %>
          <%= user_form.password_field :password, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= user_form.label :password_confirmation %>
          <%= user_form.password_field :password_confirmation, class: 'form-control' %>
        </div>
      <% end %>

      <%= f.submit "Create Account", class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>